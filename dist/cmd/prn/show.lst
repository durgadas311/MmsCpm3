 410   1      getbcd: procedure(value);
 411   2          declare
PL/M-80 COMPILER    CP/M 3.0 --- SHOW 3.1                                                                                   PAGE  17


                      (value,prec) address,
                      i byte;

 412   2          prec = 10000;
 413   2          i = 5;                            /* digits: 4,3,2,1,0 */
 414   2              do while prec <> 0;
 415   3              val(i:=i-1) = value / prec;   /* get next digit */
 416   3              value = value mod prec;       /* remainder in value */
 417   3              prec = prec / 10;
 418   3              end;
 419   2          end getbcd;
              /* - - - - - - - - - - - - - - - - - - - - - - - - - - - - - */


                                /* print BCD number in val array */
 420   1      printbcd: procedure;
 421   2         declare 
                     (zerosup, i) byte;

 422   2         pchar: procedure(c);
 423   3             declare c byte;
 424   3             if val(i) = 0 then
 425   3                 if zerosup then 
 426   3                     if i <> 0 then do;
 428   4                         call printb;
 429   4                         return;
 430   4                         end;
                     /* else */
 431   3             call printchar(c);
 432   3             zerosup = false;
 433   3         end pchar;

 434   2         zerosup = true;
 435   2         i = 7;
 436   2             do while (i:=i-1) <> -1;
 437   3             call pchar('0'+val(i));
 438   3             if i = 6 or i = 3 then 
 439   3                 call pchar(',');
 440   3             end;
 441   2         end printbcd;
              /* - - - - - - - - - - - - - - - - - - - - - - - - - - - - - */


                                /* add two BCD numbers result in second */
 442   1      add: procedure(ap,bp);
 443   2          declare
                      (ap,bp)        address,
                      a based ap (7) byte,
                      b based bp (7) byte,
                      (c,i)          byte;

 444   2          c = 0;                               /* carry   */
 445   2              do i = 0 to 6;                   /* 0 = LSB */
 446   3              b(i) = a(i) + b(i) + c;
 447   3              c = b(i) / 10;
 448   3              b(i) = b(i) mod 10;
 449   3              end;
