 391   1      pdecimal: procedure(v,prec,zerosup);
                  /* print value v with precision prec (1,10,100,1000,10000)
                  with leading zero suppression if zerosup = true */
 392   2          declare
                      v address,    /* value to print */
                      prec address, /* precision */
                      zerosup byte, /* zero suppression flag */
                      d byte;       /* current decimal digit */

 393   2              do while prec <> 0;
 394   3                      d = v / prec;           /* get next digit */
 395   3                      v = v mod prec;         /* get remainder back to v */
 396   3                      prec = prec/10;         /* ready for next digit */

 397   3                      if prec = 0 then go to pd0;
 399   3                      if d <> 0 then go to pd0;
 401   3                      if zerosup then do;
 403   4                              call printb;
 404   4                              go to pd1;
 405   4                      end;
 406   3      pd0:                    zerosup = false;
 407   3                              call printchar('0'+d);
 408   3      pd1:    end;

 409   2      end pdecimal;

