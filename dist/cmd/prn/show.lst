 455   2          call getbcd(b3.lword);         /* put 16 bit value in val */
 456   2          high$byte = b3.hbyte;
 457   2              do i = 0 to 6;                 /* factor for bit i */
 458   3              if high$byte then              /* LSB is 1 */
 459   3                  call add(ptr(i),.fac);     /* add in factor */
 460   3              high$byte = shr(high$byte,1);  /* get next bit  */
 461   3              end;
