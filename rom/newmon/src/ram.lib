cmdbuf:	ds	6	; SASI (H67) cmd buf, GIDE
resbuf:	ds	2	; SASI (H67) results
	ds	22
cport:	ds	1	; current disk I/O port base (boot)
BDF:	ds	1	; boot device unit
SEC$CNT: ds	1	; 02152h
l2153h:	ds	1
kpchar:	ds	1
lstcmd:	ds	1
